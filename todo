others=$(grep -v "200\|201" access.log solo un día)
CODE_NAMES=(200 a b c others)
for i in (ip list)
  for i in CODE_NAMES[].length
      echo "ip,type=CODE_NAMES[i] value=$(grep code access.log)"
  done
done


